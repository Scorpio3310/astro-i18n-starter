---
// Disable prerendering to allow this page to be used with Astro.rewrite()
// When output mode is 'server', rewrite() can only target dynamic (non-prerendered) pages
// This allows other dynamic routes to rewrite to this 404 page while preserving the original URL
// Without this, attempting to rewrite to a static 404 page would throw a build error
export const prerender = false;

// Imports
import {
    useTranslatedPath,
    getLangFromUrl,
    useTranslations,
} from "@i18n/utils";

import Base from "@layouts/Base.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Base
    title={t("pageNotFound.head.title")}
    meta={{
        description: t("pageNotFound:head.description"),
    }}
>
    <section>
        <h1>{t("pageNotFound.title")}</h1>
        <div class="flex mt-16 justify-center">
            <a href={translatePath("/")} class="button"
                >{t("pageNotFound.link")} â†’</a
            >
        </div>
    </section>
</Base>
