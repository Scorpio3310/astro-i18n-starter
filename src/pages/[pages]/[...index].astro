---
//Imports
import Base from "@layouts/Base.astro";
import { buildLocalizedStaticPaths } from "@i18n/utils";
import "@styles/markdown.css";

// Get current language from URL
// Localize the generic Pages section.
// Pattern: ["pages", "...index"] â†’ first segment fills [pages], remaining (if any) fills [...index].
export function getStaticPaths() {
    return buildLocalizedStaticPaths("/pages", ["pages", "...index"]);
}

// Props
const { lang } = Astro.props;

// Dynamically import the correct MDX file based on the language
const { Content, frontmatter } = await import(`./_pages-${lang}.mdx`);
---

<Base
    title={frontmatter?.title}
    meta={{
        description: frontmatter?.description,
        keywords: frontmatter?.keywords,
    }}
>
    <section id="md-content" aria-label="Page content">
        <Content />
    </section>
</Base>
